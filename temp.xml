<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0"
        xmlns:zbsspg="http://www.w3.org/ns/widgets"
        id="com.gcc.exchange"
        version="3.4.4">

    <!-- Features -->
    <feature name="TrackierCordovaPlugin">
        <param name="android-package" value="com.trackier.cordova_sdk.TrackierCordovaPlugin"/>
    </feature>
    <feature name="Clipboard">
        <param name="android-package" value="com.verso.cordova.clipboard.Clipboard"/>
    </feature>
    <feature name="PDFService">
        <param name="android-package" value="com.pdf.generator.PDFGenerator"/>
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="CordovaHttpPlugin">
        <param name="android-package" value="com.silkimen.cordovahttp.CordovaHttpPlugin"/>
    </feature>
    <feature name="AES256">
        <param name="android-package" value="com.ideas2it.aes256.AES256"/>
    </feature>
    <feature name="Permissions">
        <param name="android-package" value="com.android.plugins.Permissions"/>
    </feature>
    <feature name="AppVersion">
        <param name="android-package" value="uk.co.whiteoctober.cordova.AppVersion"/>
    </feature>
    <feature name="AppAvailability">
        <param name="android-package" value="com.ohh2ahh.appavailability.AppAvailability"/>
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device"/>
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode"/>
    </feature>
    <feature name="BackgroundModeExt">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundModeExt"/>
    </feature>
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher"/>
    </feature>
    <feature name="FCMPlugin">
        <param name="android-package" value="com.gae.scaffolder.plugin.FCMPlugin"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="FilePath">
        <param name="android-package" value="com.hiddentao.cordova.filepath.FilePath"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Fingerprint">
        <param name="android-package" value="de.niklasmerz.cordova.biometric.Fingerprint"/>
    </feature>
    <feature name="Geolocation">
        <param name="android-package" value="org.apache.cordova.geolocation.Geolocation"/>
    </feature>
    <feature name="Globalization">
        <param name="android-package" value="org.apache.cordova.globalization.Globalization"/>
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser"/>
    </feature>
    <feature name="IRoot">
        <param name="android-package" value="de.cyberkatze.iroot.IRoot"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="IsDebug">
        <param name="android-package" value="me.mattlewis.isdebug.IsDebug"/>
    </feature>
    <feature name="LottieSplashScreen">
        <param name="android-package" value="de.dustplanet.cordova.lottie.LottieSplashScreen"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Market">
        <param name="android-package" value="com.xmartlabs.cordova.market.Market"/>
    </feature>
    <feature name="NativeGeocoder">
        <param name="android-package" value="cordova.plugin.nativegeocoder.NativeGeocoder"/>
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager"/>
    </feature>
    <feature name="CDVOrientation">
        <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation"/>
    </feature>
    <feature name="AndroidSmsRetriever">
        <param name="android-package" value="com.codingsans.ionic.smsRetriever.AndroidSmsRetriever"/>
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="ThemeableBrowser">
        <param name="android-package" value="com.initialxy.cordova.themeablebrowser.ThemeableBrowser"/>
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing"/>
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin"/>
    </feature>
    <feature name="IonicDeeplinkPlugin">
        <param name="android-package" value="io.ionic.links.IonicDeeplink"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="FirebasePlugin">
        <param name="android-package" value="org.apache.cordova.firebase.FirebasePlugin"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="FileChooser">
        <param name="android-package" value="com.megster.cordova.FileChooser"/>
    </feature>
    <feature name="Chooser">
        <param name="android-package" value="com.cyph.cordova.Chooser"/>
    </feature>
    <feature name="CDVIonicKeyboard">
        <param name="android-package" value="io.ionic.keyboard.CDVIonicKeyboard" onload="true"/>
    </feature>
    <feature name="RequestLocationAccuracy">
        <param name="android-package" value="cordova.plugin.RequestLocationAccuracy"/>
    </feature>
    <feature name="Diagnostic">
        <param name="android-package" value="cordova.plugins.Diagnostic"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_Location">
        <param name="android-package" value="cordova.plugins.Diagnostic_Location"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_Bluetooth">
        <param name="android-package" value="cordova.plugins.Diagnostic_Bluetooth"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_Wifi">
        <param name="android-package" value="cordova.plugins.Diagnostic_Wifi"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_Camera">
        <param name="android-package" value="cordova.plugins.Diagnostic_Camera"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_Notifications">
        <param name="android-package" value="cordova.plugins.Diagnostic_Notifications"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_NFC">
        <param name="android-package" value="cordova.plugins.Diagnostic_NFC"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="Diagnostic_External_Storage">
        <param name="android-package" value="cordova.plugins.Diagnostic_External_Storage"/>
        <param name="onload" value="true"/>
    </feature>
    <feature name="MobileAccessibility">
        <param name="android-package" value="com.phonegap.plugin.mobileaccessibility.MobileAccessibility"/>
    </feature>

    <!-- Preferences -->
    <preference name="loglevel" value="DEBUG"/>
    <preference name="KeepRunning" value="true"/>
    <preference name="webView" value="com.ionicframework.cordova.webview.IonicWebViewEngine"/>
    <preference name="ScrollEnabled" value="false"/>
    <preference name="android-minSdkVersion" value="28"/>
    <preference name="android-targetSdkVersion" value="33"/>
    <preference name="android-compileSdkVersion" value="33"/>
    <preference name="BackupWebStorage" value="none"/>

    <preference name="GradlePluginKotlinEnabled" value="true"/>
    <preference name="GradlePluginKotlinCodeStyle" value="official"/>
    <preference name="GradlePluginKotlinVersion" value="1.9.0"/>
    <preference name="AndroidX" value="true"/>
    <preference name="AndroidXEnabled" value="true"/>
    <preference name="FadeSplashScreenDuration" value="0"/>
    <preference name="SplashShowOnlyFirstTime" value="false"/>
    <preference name="SplashScreenDelay" value="0"/>
    <preference name="SplashScreen" value="none"/>
    <preference name="LottieAnimationLocation" value="www/assets/Splash.json"/>
    <preference name="LottieFullScreen" value="true"/>
    <preference name="LottieAutoHideSplashScreen" value="false"/>
    <preference name="LottieScaleType" value="CENTER_CROP"/>
    <preference name="LottieLoopAnimation" value="false"/>
    <preference name="orientation" value="portrait"/>
    <preference name="AndroidlaunchMode" value="singleTask"/>
    <preference name="loadUrlTimeoutValue" value="700000"/>
    <preference name="AndroidWindowSplashScreenAnimatedIcon" value="resources/android/splash/splashscreen.xml"/>


    <!-- Access Rules -->
    <allow-navigation href="cdvfile:*"/>
    <allow-navigation href="http://localhost/*"/>
    <allow-navigation href="https://localhost/*"/>
    <allow-navigation href="ionic://*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <allow-intent href="market:*"/>
    <access origin="*"/>
    <access origin="https://ssl.gstatic.com/accessibility/javascript/android/*"/>

    <!-- Resources -->
    <resource-file src="resources/android/xml/network_security_config.xml" target="app/src/main/res/xml/network_security_config.xml"/>
    <resource-file src="src/assets/certificates/certificate.cer" target="app/src/main/assets/www/certificates/certificate.cer"/>
    <resource-file src="src/assets/certificates/uaepasscertificate.cer" target="app/src/main/assets/www/certificates/uaepasscertificate.cer"/>
    <resource-file src="src/assets/certificates/uaepass-ae-live.cer" target="app/src/main/assets/www/certificates/uaepass-ae-live.cer"/>
    <resource-file src="src/assets/certificates/papi_dv_u_ae.cer" target="app/src/main/assets/www/certificates/papi_dv_u_ae.cer"/>
    <resource-file src="src/assets/certificates/refgccexchagecertificate.cer" target="app/src/main/assets/www/certificates/refgccexchagecertificate.cer"/>

    <!-- Icons -->
    <icon density="ldpi" src="resources/android/icon/drawable-ldpi-icon.png"/>
    <icon density="mdpi" src="resources/android/icon/drawable-mdpi-icon.png"/>
    <icon density="hdpi" src="resources/android/icon/drawable-hdpi-icon.png"/>
    <icon density="xhdpi" src="resources/android/icon/drawable-xhdpi-icon.png"/>
    <icon density="xxhdpi" src="resources/android/icon/drawable-xxhdpi-icon.png"/>
    <icon density="xxxhdpi" src="resources/android/icon/drawable-xxxhdpi-icon.png"/>

    <!-- Configurations -->
    <edit-config xmlns:android="http://schemas.android.com/apk/res/android"
                 file="app/src/main/AndroidManifest.xml"
                 mode="merge"
                 target="/manifest/application">
        <application android:allowBackup="false" android:networkSecurityConfig="@xml/network_security_config"/>
    </edit-config>

    <config-file parent="/manifest/application" target="AndroidManifest.xml">
        <provider android:name="org.apache.cordova.camera.FileProvider"
                  android:exported="false"
                  android:authorities="${applicationId}.cordova.plugin.camera.provider"
                  android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/camera_provider_paths"/>
            <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
        </provider>
    </config-file>

    <config-file mode="merge" parent="/manifest/queries" target="app/src/main/AndroidManifest.xml">
        <package android:name="ae.uaepass.mainapp"/>
        <package android:name="ae.uaepass.mainapp.stg"/>
        <package android:name="com.whatsapp"/>
        <package android:name="com.google.android.gm"/>
    </config-file>

    <config-file parent="/manifest" target="AndroidManifest.xml">
        <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
        <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>
        <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    </config-file>

    <!-- Application Metadata -->
    <name>GCC Exchange</name>
    <description>GCC Exchange</description>
    <author email="gccexchange@gmail.com" href="http://ionicframework.com/">GCC Exchange Team</author>
    <content src="index.html"/>
</widget>
